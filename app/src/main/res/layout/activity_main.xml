<!-- A DrawerLayout is intended to be used as the top-level content view using match_parent for both width and height to consume the full space available. -->
<android.support.v4.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/drawer_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.projectcrescendo.projectcrescendo.MainActivity">

    <!-- As the main content view, the view below consumes the entire
         space available using match_parent in both dimensions. -->
    <FrameLayout
        android:id="@+id/container"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/start_up_menu">

        <!--<Button-->
            <!--android:layout_width="wrap_content"-->
            <!--android:layout_height="wrap_content"-->
            <!--android:text="Settings"-->
            <!--android:id="@+id/settingsButton" />--> <!--testing-->

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Start Tutorials"
            android:textSize="22dp"
            android:textColor="@color/white"
            android:background="@color/black"
            android:layout_gravity="center_horizontal|bottom"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="35dp"
            android:id="@+id/startTutorialsButton"/>
    </FrameLayout>


</android.support.v4.widget.DrawerLayout>
